# LLM Provider Configuration
# Options: openai, gemini, ollama, vllm, sentence-transformers
LLM_PROVIDER=sentence-transformers

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-ada-002

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/embedding-001

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text

# vLLM Configuration (for self-hosted models)
VLLM_BASE_URL=http://localhost:8000
VLLM_MODEL=BAAI/bge-large-en-v1.5
VLLM_API_KEY=your_vllm_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=resume-index

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=resume_db

# Application Configuration
APP_NAME=Resume Index API
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt